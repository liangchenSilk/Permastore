<?php $salesOrderHelper = Mage::helper('epicor_comm/sales_order'); /* @var $salesOrderHelper Epicor_Comm_Helper_Sales_Order */ ?>
<div style="text-align:center">
<div class="page-title">
    <h1><?php echo $this->__('Your AR Payments Payment has been received.') ?></h1>
</div>
<?php echo $this->getMessagesBlock()->toHtml() ?>
<?php if ($this->getOrderId()):?>
    <?php if ($salesOrderHelper->showWebArpaymentsNumber()):?>
        <p>
            <?php echo $this->__('Your %s Payment Reference # is: %s.',
                $salesOrderHelper->showErpArpaymentsNumber() ? 'web' : '',
                $this->getCanViewOrder() ? sprintf('<a href="%s">%s</a>', $this->escapeHtml($this->getViewOrderUrl()), $this->escapeHtml($this->getOrderId())) : $this->escapeHtml($this->getOrderId())
            ) ?>
        </p>
    <?php endif;?>
    <?php if ($salesOrderHelper->showErpArpaymentsNumber() && $this->getErpOrderNumber()):?>
        <p>
            <?php echo $this->__('Your %s Payment Reference # is: %s.',
                $salesOrderHelper->showWebArpaymentsNumber() ? 'erp' : '',
                $this->getCanViewOrder() ? sprintf('<a href="%s">%s</a>', $this->escapeHtml($this->getViewOrderUrl()), $this->escapeHtml($this->getErpOrderNumber())) : $this->escapeHtml($this->getErpOrderNumber())
            ) ?>
        </p>
    <?php endif;?>
        <p><?php echo $this->__('You will receive a confirmation email with details of your payment') ?></p>
<?php endif;?>
</div>