/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */
$postValues = Mage::App()->getRequest()->getParam('removeval');
$branch     = Mage::App()->getRequest()->getParam('branch');
$removeIds  = json_decode($postValues,true);
$helperBranchPickup = Mage::helper('epicor_branchpickup/branchpickup');
?>
<div class="block block-cart branchmaincontainer">
    <?php $_cartQty = $this->getSummaryCount() ?>
    <div class="block-content">
        <div class="actions" id="branchpictionactions">
            <?php
            $msg = '';
            if (!Mage::getStoreConfigFlag('cataloginventory/options/show_out_of_stock')) {
                $msg = " Or May be out of stock";
            }
            ?>
            <p class="block-subtitle"><?php echo $this->__('The following items are not available from your selected pickup branch' . $msg) ?></p>
            <br>
        <p class="block-subtitle error">Would you like to delete these item(s)?</p>
        <button type="button" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Cancel')) ?>" class="button" onclick="cartPage.closepopup()"><span><span><?php echo $this->__('Cancel') ?></span></span></button>
        <form method="post" action="<?php echo Mage::getUrl('branchpickup/pickup/removeitemsincart',$helperBranchPickup->issecure()) ?>">
        <input type="hidden" name="removeitems" id="removeitems" value="<?php echo implode(',', $removeIds) ?>">
        <input type="hidden" name="branch" id="branch" value="<?php echo $branch ?>">
        <button style="margin-right: 10px;" type="submit" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Delete Items')) ?>" class="button" ><span><span><?php echo $this->__('Delete Items') ?></span></span></button>
        </form>
    </div>
    <?php $_items = $this->getItems() ?>
    <?php if(count($_items)): ?>
        
        <ol id="cart-sidebar-branch" class="mini-products-list">
        <?php foreach($_items as $_item): 
            if (in_array($_item->getProductId(),$removeIds)) {
        ?>
            <li>
                <?php 
                $getProductThumbnail  =$this->helper('catalog/image')->init($_item->getProduct(), 'thumbnail');
                ?>
               <span class="product-image"><img src="<?php echo $getProductThumbnail; ?>" width="50" height="50" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" /></span>
                <div class="product-details">
                <h2 class="product-name">
                   <?php echo $this->escapeHtml($_item->getName()) ?>
                </h2>
                <div class="product-cart-sku">
                <?php
                    $fullsku = $_item->getSku();
                    $helperComm = Mage::helper('epicor_comm');
                    $sku = $helperComm->getSku($fullsku);    
                    $storeId = Mage::app()->getStore()->getStoreId();
                    $packSize = Mage::getResourceModel('catalog/product')->getAttributeRawValue($_item->getProduct()->getId(), 'pack_size', $storeId); 
                ?>
                    SKU: <?php echo $this->escapeHtml($sku) ?> <br>
                    Unit of Measure: <?php echo $packSize ?> <br>
                </div>
                </div>
            </li>
        <?php  } endforeach; ?>
        </ol>
        <script type="text/javascript">decorateList('cart-sidebar', 'none-recursive')</script>
    <?php else: ?>
        <p class="empty"><?php echo $this->__('You have no items in your shopping cart.') ?></p>
    <?php endif ?>
    </div>
</div>
