        </reference>
        <reference name="left">
            <block type="customerconnect/adminhtml_arpayments_sales_order_view_tabs" name="sales_order_tabs">
                <block type="customerconnect/adminhtml_arpayments_sales_order_view_tab_info" name="order_tab_info" template="epicor_common/arpayments/sales/order/view/tab/info.phtml">
                    <block type="customerconnect/adminhtml_arpayments_sales_order_view_messages" name="order_messages"></block>
