                <action method="addTab"><name>order_transactions</name><block>customerconnect/adminhtml_arpayments_sales_order_view_tab_erpinfo</block></action>
                <action method="addTab"><name>arorder_design_details</name><block>customerconnect/adminhtml_arpayments_sales_order_view_tab_log</block></action>
           
