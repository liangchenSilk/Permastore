                    <block type="customerconnect/adminhtml_arpayments_sales_order_payment" name="order_payment"/>
                    <block type="customerconnect/adminhtml_arpayments_sales_order_view_history" name="order_history" template="epicor_common/arpayments/sales/order/view/history.phtml"></block>
                    <block type="customerconnect/adminhtml_arpayments_sales_order_totals" name="order_totals" template="epicor_common/arpayments/sales/order/totals.phtml">
                    </block>
                </block>
