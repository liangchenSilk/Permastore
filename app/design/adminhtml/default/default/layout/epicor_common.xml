                        <action method="addColumnRender"><column>name</column><block>adminhtml/sales_items_column_name</block><template>epicor_common/arpayments/sales/items/column/name.phtml</template></action>
                        <action method="addColumnRender"><column>name</column><block>adminhtml/sales_items_column_name_grouped</block><template>epicor_common/arpayments/sales/items/column/name.phtml</template><type>grouped</type></action>
