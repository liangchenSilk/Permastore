<div class="content-header">
        <h3 class="icon-head">Test Tracking Url</h3>
        <p class="content-buttons form-buttons">
            <button id="trackingclose" title="Cancel" type="button" class="scalable " onclick="shippingmethodtrack.closepopup()" style=""><span><span><span>Cancel</span></span></span></button>
        </p>
</div>
    <div class="entry-edit">
        <div class="hor-scroll">
         <form action="">
        <table class="form-list" cellspacing="0">
            <tbody>
                <tr style="display:none">
                    <td class="label"><label for="entertrackingurl">Tracking Url</label></td>
                <td class="value">
                    <input id="entertrackingurl" name="entertrackingurl" value=""  type="hidden">        
                </td>
                </tr>                
                <tr>
                    <td class="label"><label for="entertrackingno">Tracking Number</label></td>
                <td class="value">
                    <input id="entertrackingno" name="entertrackingno" value="" class=" input-text" type="text">        
                </td>
                </tr>
                <tr>
                    <td class="label" colspan="2">
                        <input type="button" id="trackingsubmit" value="Submit"/>
                        
                    </td>
              
                </tr>                
            </tbody>
        </table>
         </form>
        </div>    
    </div>
<script>
var myBtn = document.getElementById('trackingsubmit');    
  //add event listener
myBtn.addEventListener('click', function(event) {
    var textboxurl = $('entertrackingurl').value;
    var trackingNumber = $('entertrackingno').value;
    if(!trackingNumber) {
        alert("Please enter the Tracking Number");
        return false;
    }
    var formattedUrl = textboxurl.replace("{{TNUM}}",trackingNumber);
    window.open(formattedUrl, '_blank');
});    
</script>