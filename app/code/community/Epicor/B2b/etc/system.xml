                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <depends>
                                <reg_portal>1</reg_portal>
                                <reg_options>cnc</reg_options>
                            </depends>
                        </registered_address>
                        <registered_address_phone_fax>
